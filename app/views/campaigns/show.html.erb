<div class="mb-6 flex items-center justify-between">
  <div>
    <%= link_to "â† Back to dashboard", campaigns_path, class: "text-sm font-semibold text-indigo-600 hover:text-indigo-500" %>
    <h2 class="mt-2 text-2xl font-semibold text-slate-900"><%= @campaign.title %></h2>
  </div>
  <% if @campaign.pending? %>
    <%= button_to "Start dispatch", dispatch_campaign_path(@campaign), method: :post, class: "rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
  <% end %>
 </div>

<%= turbo_stream_from @campaign %>

<div class="grid gap-6 lg:grid-cols-3">
  <section class="lg:col-span-2 space-y-6">
    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <%= turbo_frame_tag "campaign_progress" do %>
        <%= render "progress", campaign: @campaign %>
      <% end %>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <div class="flex items-center justify-between">
        <h3 class="text-base font-semibold text-slate-900">Recipients</h3>
        <span class="text-xs text-slate-500"><%= @campaign.recipients.count %> total</span>
      </div>
      <ul class="mt-4 space-y-3">
        <%= render partial: "recipients/recipient", collection: @campaign.recipients, as: :recipient %>
      </ul>
    </div>
  </section>

  <aside class="space-y-4">
    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-sm font-semibold text-slate-700">Campaign status</h3>
      <div class="mt-3 flex items-center gap-2">
        <span class="rounded-full px-3 py-1 text-xs font-semibold <%= status_badge_class(@campaign.status) %>">
          <%= @campaign.status.capitalize %>
        </span>
        <span class="text-xs text-slate-500">Updated <%= time_ago_in_words(@campaign.updated_at) %> ago</span>
      </div>
      <p class="mt-4 text-sm text-slate-500">
        Recipients update in real time as the dispatch job runs.
      </p>
    </div>
  </aside>
</div>

